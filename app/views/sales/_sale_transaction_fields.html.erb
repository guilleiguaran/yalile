<div class="four-fieldset clearfix">
  <%= f.input :article_id, label: "Productos:", collection: @articles, value_method: "id", label_method: Proc.new{|article| article_label(article)}, prompt: "Producto", input_html: {class: "skin-select", onChange: "saleAction.articleBasicInfo(this);"}, wrapper: nil %>
  <%= f.input :quantity_articles, label: "Cantidad:", as: "string", input_html: {maxlength: 2, class: "text mnumeric"} %>
  <%= f.input :article_unit_price_sold, label: "$ Unitario:", as: "string", input_html: {disabled: true, class: "text"} %>
  <%= f.input :article_total_price, label: "$ Total:", as: "string", input_html: {disabled: true, class: "text"} %>
  <%= content_tag :ul, class: "texter-list", style: "float: left; margin-top: 32px; width: 14px;" do %>
    <%= content_tag :li, link_to("", "javascript:void(0);", class: :remove ) %>
  <% end %>
</div><!--.four-fieldset-->
