  </thead>
  <tbody>
    <%= content_tag_for :tr, @sales do |sale| %>
      <td>
        <%= link_to "", sale_path(sale.id), class: "hidden" %>
        <%= content_tag :span, sale.id %>
      </td>
      <td><%= content_tag :span, sale.salesman %></td>
      <td><%= content_tag :span, formatted_time(sale.created_at) %></td>
      <td><%= content_tag :span, sale.transactions_by_status(1).count %></td>
      <td><%= content_tag :span, sale.total_articles %></td>
      <td><%= content_tag :span, number_to_currency(sale.total) %></td>
    <% end %>
  </tbody>
</table>
<div class="navigation">
  <%= content_tag :p, page_entries_info(@sales, entry_name: "Ventas") %>
