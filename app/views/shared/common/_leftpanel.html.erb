<div class="sidebar">
  <% if current_user %>
  <div class="content-avatar clearfix">
    <%= content_tag :div, image_tag("app/avatar.jpg"), class: "user-avatar" %>
    <div class="user-data">
      <%= content_tag :h2, current_user.fullname %>
      <%= content_tag :span, current_user.email %>
    </div><!-- user-data END -->
  </div><!-- content-avatar clearfix END -->
  <div class="choose-app">
    <fieldset>
      <%= label :product, "Escoge un Producto" %>
      <%= select :summary, :product, summary_for_articles, {prompt: "Elige Un Producto"}, {class: "skin-select"} %>
    </fieldset>
  </div><!--.choose-app-->
  <div class="paid-value">
    <%= content_tag :h2, "Venta De Hoy" %>
    <%= content_tag :span, "$999,99", id: :today_summary %>
  </div><!-- paid-value END -->
  <div class="paid-value default">
    <% summary_for_articles %>
    <%= content_tag :h2, "Venta del Mes de #{l(Date.today, format: "%B").humanize}"%>
    <%= content_tag :span, "$999,99", id: :monthly_summary %>
  </div><!-- paid-value default END -->
  <% end %>
</div><!--.sidebar-->
