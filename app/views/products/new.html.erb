<%= simple_form_for @product, html: {id: "product_form"}, defaults: {input_html: {class: "text"}} do |form| %>
  <div class="four-fieldset clearfix">
    <%= form.input :code, label: "Productos:", collection: @products, prompt: "Elija un producto", input_html: {class: "skin-select"}, wrapper: nil %>
    <%= form.input :name, label: "Nombre del Producto:", placeholder: "O ingrese un nombre nuevo ...", input_html: {maxlength: 30}, wrapper_html: {class: "bigest"} %>
  </div><!--.four-fieldset-->
  <div class="four-fieldset clearfix more-separate cancel-save">
    <%= form.simple_fields_for :articles do |builder| %>
      <%= builder.input :size, label: "Talla:", input_html: {maxlength: 3, class: "malphanumeric text"} %>
      <%= builder.input :in_stock, label: "Cantidad:", input_html: {maxlength: 4, class: "text mnumeric"}, as: :string %>
      <%= builder.input :code, label: "CÃ³digo:", input_html: {maxlength: 30, class: "malphanumeric text"}, wrapper_html: {class: "big last"} %>
    <% end %>
  </div><!--.four-fieldset-->
  <div class="cancel-save">
    <ul class="list-cancel">
