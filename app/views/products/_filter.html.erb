<div class="head-table box-default clearfix">
  <%= simple_form_for :filter, html: {id: "form_for_filter"}, defaults: {input_html: {class: "text"}} do |form| %>
    <div class="box-search">
      <%= form.input :text_value, label: "Buscar Por:", wrapper_html: {class: "input-search"}, input_html: {placeholder: "Filtre aqui por ..."} %>
      <%= form.input :name, collection: [["Nombre",""]], as: :radio, label: false, collection_wrapper_class: "list-radios clearfix", input_html: {class: ""} %>
    </div><!-- box-search END -->
    <div class="data-time">
      <div class="two-fieldset clearfix">
        <%= form.input :initial_date, label: "Fecha Inicial:", input_html: {class: "datepicker-call datepicker text", placeholder: "DD / MM / YYYY"} %>
        <%= form.input :final_date, label: "Fecha Final:", input_html: {class: "datepicker-call datepicker text", placeholder: "DD / MM / YYYY"}, wrapper_html: {class: "last"} %>
      </div><!-- two-fieldset clearfix END -->
      <fieldset>
        <%= content_tag :label, "Tipo de Dato:" %>
        <%= form.input :created_at, collection: [["Creado",""]], as: :radio, label: false, collection_wrapper_class: "list-radios clearfix", input_html: {class: ""} %>
      </fieldset>
    </div><!-- data-time END -->
  <% end %>
</div><!--.head-table-->
