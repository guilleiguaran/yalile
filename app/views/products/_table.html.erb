<table class="main-table aligncenter">
  <thead>
    <tr>
      <td><span>Status</span></td>
      <td><span>Nombre</span></td>
      <td><span>Creado</span></td>
    </tr>
  </thead>
  <tbody>
    <%= content_tag_for :tr, @products do |product| %>
      <td><%= content_tag :span, "", class: "table-status initiated" %></td>
      <td><%= content_tag :span, product.name.titleize %></td>
      <td><%= content_tag :span, formatted_time(product.created_at) %></td>
    <% end %>
  </tbody>
</table>
<div class="navigation">
  <p><%= page_entries_info @products, entry_name: "Productos" %></p>
  <%= paginate @products %>
</div>