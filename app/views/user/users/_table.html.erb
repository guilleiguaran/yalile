<table class="main-table aligncenter">
  <thead>
    <tr>
      <td><span>Status</span></td>
      <td><span>Nombre</span></td>
      <td><span>Email</span></td>
      <td><span>User</span></td>
      <td><span>Role</span></td>
    </tr>
  </thead>
  <tbody>
    <%= content_tag_for :tr, @users do |user| %>
      <td>
        <%= link_to "", user_path(user.id), class: "hidden" %>
        <%= content_tag :span, "", class: "table-status initiated" %>
      </td>
      <td><%= content_tag :span, user.fullname %></td>
      <td><%= content_tag :span, user.email %></td>
      <td><%= content_tag :span, user.username %></td>
      <td><%= content_tag :span, user.is_admin.eql?(true) ? "Admin" : "Usuário" %></td>
    <% end %>
  </tbody>
</table>
<div class="navigation">
  <%= content_tag :p, page_entries_info(@users, entry_name: "Usuários") %>
  <%= paginate @users %>
</div>